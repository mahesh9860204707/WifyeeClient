<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#E8E2D0"
    android:layout_height="match_parent"
    tools:context="com.wifyee.greenfields.foodorder.AddToCartActivity">

    <android.support.v7.widget.Toolbar
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/mtoolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark"
        android:elevation="2dp"
        android:theme="@style/Base.ThemeOverlay.AppCompat.Dark">

    </android.support.v7.widget.Toolbar>

  <!--  <LinearLayout
        android:layout_width="match_parent"
        android:layout_below="@+id/mtoolbar"
        android:orientation="vertical"
        android:weightSum="2"
        android:layout_height="match_parent">-->

    <TextView
        android:id="@+id/tv_exceed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mtoolbar"
        android:background="#ff6666"
        android:textColor="#fff"
        android:paddingLeft="8dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:paddingRight="8dp"
        android:visibility="gone"/>

    <android.support.v7.widget.RecyclerView
            android:id="@+id/order_recyclerview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/tv_exceed"
            android:scrollbars="vertical"
            android:layout_above="@+id/rl_address"/>

    <Button
        android:id="@+id/add_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark"
        android:textColor="@color/white"
        android:layout_alignParentBottom="true"
        android:text="Add Address to proceed" />

    <RelativeLayout
        android:id="@+id/rl_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/ll"
        android:background="#fff"
        android:visibility="gone">

        <ImageView
            android:id="@+id/ic_deliver_addr"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_deliver_address"/>

        <ImageView
            android:id="@+id/ic_verified"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginStart="34dp"
            android:src="@drawable/ic_verified"/>

        <TextView
            android:id="@+id/txt_deliver_to"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Deliver to"
            android:textColor="@color/black"
            android:layout_marginStart="5dp"
            android:layout_toEndOf="@+id/ic_verified"/>

        <TextView
            android:id="@+id/change"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CHANGE"
            android:textColor="#007700"
            android:layout_marginEnd="8dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"/>

        <TextView
            android:id="@+id/address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:maxLines="2"
            android:ellipsize="end"
            android:layout_marginStart="5dp"
            android:textSize="12sp"
            android:layout_toEndOf="@+id/ic_verified"
            android:layout_below="@+id/txt_deliver_to"/>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="@color/green_shade"
        android:weightSum="2"
        android:visibility="invisible"
        android:layout_alignParentBottom="true">

        <Button
            android:id="@+id/btn_continue"
            android:layout_width="wrap_content"
            android:text="Continue"
            android:layout_weight="1.2"
            android:background="@color/colorPrimaryDark"
            android:textColor="@color/white"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/tv_totalamount"
            android:layout_width="wrap_content"
            android:text="Total amount:-"
            android:textSize="18dp"
            android:background="@color/colorPrimaryDark"
            android:layout_weight="1"
            android:paddingTop="13dp"
            android:textColor="#FFFFFF"
            android:drawableLeft="@drawable/rupee"
            android:layout_alignParentLeft="true"
            android:layout_height="match_parent" />

    </LinearLayout>

<!--
    </LinearLayout>
-->

</RelativeLayout>
