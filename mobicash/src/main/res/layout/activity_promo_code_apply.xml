<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context="com.wifyee.greenfields.activity.PromoCodeApplyActivity">
    <android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_logo"
        android:elevation="2dp"
        android:theme="@style/Base.ThemeOverlay.AppCompat.Dark">

        <ImageButton
            android:id="@+id/toolbar_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:background="@mipmap/back_arrow_icon" />

        <TextView
            android:id="@+id/user_balance"
            style="@style/font_family_medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:padding="8dp"
            android:text="PromoCode Apply"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold" />

    </android.support.v7.widget.Toolbar>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/input_layout_promocode"
        android:layout_width="match_parent"
        android:layout_margin="5dp"
        android:layout_height="wrap_content">
    <EditText
        android:layout_width="match_parent"
        android:id="@+id/edit_applied_promo"
        android:hint="Fill Promo Code"
        android:padding="10dp"
        android:drawableLeft="@drawable/ic_action_promocode"
        android:drawablePadding="5dp"
        android:maxLength="10"
        android:layout_height="wrap_content" />
    </android.support.design.widget.TextInputLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:weightSum="2"
        android:padding="10dp"
        android:orientation="horizontal">
    <Button
        android:layout_width="wrap_content"
        android:text="Applied"
        android:gravity="center"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:id="@+id/applied_button"
        android:textColor="@color/white"
        android:background="@drawable/button_round_cornor_selector"
        android:layout_height="40dp" />
    <TextView
        android:layout_width="wrap_content"
        android:text="Skip"
        android:gravity="center"
        android:layout_weight="1"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:layout_gravity="center"
        android:id="@+id/skip_button"
        android:textColor="@color/colorPrimaryDark"
        android:layout_height="wrap_content" />
    </LinearLayout>


</LinearLayout>
