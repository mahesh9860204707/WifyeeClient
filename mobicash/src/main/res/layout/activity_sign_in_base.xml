<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginTop="20dp"
        android:fitsSystemWindows="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="24dp"
            android:paddingRight="24dp"
            android:paddingTop="20dp">

            <ImageView
                android:id="@+id/imgLogo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/wi_fi_logo_png" />

            <TextView
                android:id="@+id/tv_sign_up"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/color_logo"
                android:text="@string/text_signup"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>
            <TextView
                android:id="@+id/link_text"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:text="@string/login_title"
                android:textSize="18sp"
                android:textStyle="bold" />


            <EditText
                android:id="@+id/tv_phone_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@null"
                android:drawableLeft="@mipmap/phone_no_icon"
                android:drawablePadding="10dp"
                android:focusable="true"
                android:hint="@string/phone_number"
                android:inputType="phone"
                android:maxLines="1"
                android:padding="2dp"
                android:textSize="16dp" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dip"
                android:layout_centerVertical="true"
                android:layout_marginTop="3dp"
                android:background="@android:color/darker_gray"
                android:padding="2dp" />

            <!--  Password Label -->

            <EditText
                android:id="@+id/tv_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@null"
                android:drawableLeft="@mipmap/passcode_icon"
                android:drawablePadding="10dp"
                android:focusable="true"
                android:hint="@string/pass_code"
                android:inputType="numberPassword"
                android:maxLines="1"
                android:padding="2dp"
                android:textSize="16dp" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dip"
                android:layout_centerVertical="true"
                android:layout_marginTop="3dp"
                android:background="@android:color/darker_gray"
                android:padding="2dp" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                 android:padding="5dp"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp">

                    <TextView
                        android:id="@+id/tv_otp_verify"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_marginLeft="2dp"
                        android:text="@string/resend_otp"
                        android:textAppearance="@style/TextAppearance.AppCompat.Small"
                        android:textColor="@color/color_logo" />

                    <TextView
                        android:id="@+id/tv_send_passcode"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:singleLine="true"
                        android:text="@string/send_passcode"
                        android:textAppearance="@style/TextAppearance.AppCompat.Small"
                        android:textColor="@color/blue" />

                </RelativeLayout>

                <TextView
                    android:id="@+id/update_device"
                    style="@style/font_family_medium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="2dp"
                    android:layout_marginTop="10dp"
                    android:text="Did You Update Your Device?"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    android:textColor="@color/blue"
                    android:textStyle="bold" />

            </LinearLayout>

            <Button
                android:id="@+id/btn_login"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/button_round_cornor_selector"
                android:padding="12dp"
                android:textColor="@color/white"
                android:text="@string/button_login" />


            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:id="@+id/otp_layout"
                android:visibility="visible"
                android:layout_height="wrap_content">


                <EditText
                    android:id="@+id/tv_otp"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"

                    android:layout_marginTop="20dp"
                    android:background="@null"
                    android:drawableLeft="@mipmap/first_name_icon"
                    android:drawablePadding="10dp"
                    android:focusable="true"
                    android:hint="@string/enter_otp_hints"
                    android:maxLength="6"
                    android:inputType="number"
                    android:maxLines="1"
                    android:padding="2dp"
                    android:layout_margin="10dp"
                    android:textSize="16dp"/>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dip"
                    android:visibility="visible"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="3dp"
                    android:background="@android:color/darker_gray"
                    android:padding="2dp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:text="Resend OTP"
                        android:textStyle="bold"
                        android:padding="5dp"
                        android:textSize="15sp"
                        android:layout_alignParentRight="true"
                        android:textColor="@color/colorPrimaryDark"
                        android:layout_height="wrap_content"
                        android:id="@+id/resend_otp"/>
                </RelativeLayout>




                <Button
                    android:id="@+id/submit_otp"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:textColor="@color/white"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/button_round_cornor_selector"
                    android:padding="12dp"
                    android:layout_margin="10dp"
                    android:text="@string/submit" />

            </LinearLayout>
