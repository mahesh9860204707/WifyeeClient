<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:elevation="2dp"
        android:theme="@style/Base.ThemeOverlay.AppCompat.Dark">

        <!--<ImageButton
            android:id="@+id/toolbar_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:background="@mipmap/back_arrow_icon" />-->

        <TextView
            android:id="@+id/toolbar_title"
            style="@style/font_family_medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="8dp"
            android:text="@string/sign_up_title_bar"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold" />

    </android.support.v7.widget.Toolbar>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:fitsSystemWindows="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="24dp"
            android:paddingRight="24dp"
            android:paddingTop="20dp"
            android:background="@color/white">

            <ImageView
                android:id="@+id/imgLogo"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:src="@drawable/wifyee_new_logo" />

            <!-- first name -->
            <EditText
                android:id="@+id/tv_first_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="20dp"
                android:background="@null"
                android:drawableLeft="@mipmap/first_name_icon"
                android:drawablePadding="10dp"
                android:focusable="true"
                android:hint="@string/first_name"
                android:maxLength="32"
                android:inputType="text"
                android:maxLines="1"
                android:padding="2dp"
                android:textSize="16dp" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dip"
                android:layout_centerVertical="true"
                android:layout_marginTop="3dp"
                android:background="@android:color/darker_gray"
                android:padding="2dp" />
            <!--  last name -->
            <EditText
                android:id="@+id/tv_last_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="20dp"
                android:background="@null"
                android:maxLength="32"
                android:drawableLeft="@mipmap/first_name_icon"
                android:drawablePadding="10dp"
                android:focusable="true"
                android:hint="@string/last_name"
                android:inputType="text|textNoSuggestions"
                android:maxLines="1"
                android:padding="2dp"
                android:textSize="16dp" />
            <View
                android:layout_width="fill_parent"
                android:layout_height="1dip"
                android:layout_centerVertical="true"
                android:layout_marginTop="3dp"
                android:background="@android:color/darker_gray"
                android:padding="2dp" />

            <!--  Customer Title -->
            <EditText
                android:id="@+id/tv_phone_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@null"
                android:drawableLeft="@mipmap/phone_no_icon"
                android:drawablePadding="10dp"
                android:focusable="true"
                android:hint="Mobile No"
                android:inputType="phone"
                android:maxLength="10"
                android:maxLines="1"
                android:padding="2dp"
                android:textSize="16dp" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dip"
                android:layout_centerVertical="true"
                android:layout_marginTop="3dp"
                android:background="@android:color/darker_gray"
                android:padding="2dp" />

            <EditText
                android:id="@+id/tv_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@null"
                android:drawableLeft="@mipmap/passcode_icon"
                android:drawablePadding="10dp"
                android:focusable="true"
                android:hint="Enter 4 Digit Password"
                android:inputType="numberPassword"
                android:maxLength="4"
                android:maxLines="1"
                android:padding="2dp"
                android:textSize="16dp" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dip"
                android:layout_centerVertical="true"
                android:layout_marginTop="3dp"
                android:background="@android:color/darker_gray"
                android:padding="2dp" />

            <LinearLayout
                android:id="@+id/ll9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/pincode"
                    android:paddingEnd="2dp"
                    android:layout_gravity="bottom" />

                <EditText
                    android:id="@+id/tv_pin_code"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:background="@null"
                    android:paddingStart="6dp"
                    android:focusable="true"
                    android:hint="Enter Pin Code (Postal Code)"
                    android:inputType="number"
                    android:maxLength="6"
                    android:maxLines="1"
                    android:padding="2dp"
                    android:textSize="16sp" />

            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dip"
                android:layout_centerVertical="true"
                android:layout_marginTop="3dp"
                android:background="@android:color/darker_gray"
                android:padding="2dp" />

            <RadioGroup
                android:id="@+id/radio_grp"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/_15sdp"
                android:weightSum="2"
                android:layout_height="wrap_content">

                <RadioButton
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:id="@+id/male"
                    android:text="Male"/>
                <RadioButton
                    android:id="@+id/female"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Female"/>

            </RadioGroup>

