            <EditText
                android:id="@+id/tv_customer_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="10dp"
                android:background="@null"
                android:maxLength="25"
                android:visibility="gone"
                android:drawableLeft="@drawable/ic_action_address"
                android:drawablePadding="10dp"
                android:focusable="true"
                android:hint="@string/customer_address"
                android:inputType="text|textNoSuggestions"
                android:maxLines="1"
                android:padding="2dp"
                android:textSize="16dp" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dip"
                android:visibility="gone"
                android:layout_centerVertical="true"
                android:layout_marginTop="3dp"
                android:background="@android:color/darker_gray"
                android:padding="2dp"
                />

            <Button
                android:id="@+id/btn_sign_up"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/button_round_cornor_selector"
                android:padding="12dp"
                android:textColor="@color/white"
                android:text="@string/button_sign_up" />

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:id="@+id/otp_layout"
                android:visibility="gone"
                android:layout_height="wrap_content">


                <EditText
                    android:id="@+id/tv_otp"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"

                    android:layout_marginTop="20dp"
                    android:background="@null"
                    android:drawableLeft="@mipmap/first_name_icon"
                    android:drawablePadding="10dp"
                    android:focusable="true"
                    android:hint="@string/enter_otp_hints"
                    android:maxLength="6"
                    android:inputType="text"
                    android:maxLines="1"
                    android:padding="2dp"
                    android:layout_margin="10dp"
                    android:textSize="16dp" />

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dip"
                    android:visibility="visible"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="3dp"
                    android:background="@android:color/darker_gray"
                    android:padding="2dp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:text="Link MacAddress"
                        android:textStyle="bold"
                        android:padding="5dp"
                        android:textSize="15sp"
                        android:layout_alignParentLeft="true"
                        android:textColor="@color/colorPrimaryDark"
                        android:layout_height="wrap_content"
                        android:id="@+id/link_mac"
                        android:visibility="gone"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:text="Resend OTP"
                        android:textStyle="bold"
                        android:padding="5dp"
                        android:textSize="15sp"
                        android:layout_alignParentRight="true"
                        android:textColor="@color/colorPrimaryDark"
                        android:layout_height="wrap_content"
                        android:id="@+id/resend_otp"/>
                </RelativeLayout>


                <Button
                    android:id="@+id/submit_otp"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:textColor="@color/white"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/button_round_cornor_selector"
                    android:padding="12dp"
                    android:layout_margin="10dp"
                    android:text="@string/submit" />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>