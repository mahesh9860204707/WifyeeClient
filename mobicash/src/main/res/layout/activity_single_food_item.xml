<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.wifyee.greenfields.activity.SingleFoodItemActivity">
    <android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/mtoolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#7D0A4E"
        android:elevation="2dp"
        android:theme="@style/Base.ThemeOverlay.AppCompat.Dark">

        <ImageButton
            android:id="@+id/toolbar_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:background="@drawable/ic_keyboard_backspace" />

        <TextView
            android:id="@+id/food_oder"
            style="@style/font_family_medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:padding="8dp"
            android:text="ORDER ITEM"
            android:textColor="@color/colorPrimary"
            android:textSize="18sp"
            android:textStyle="bold" />

    </android.support.v7.widget.Toolbar>
    <android.support.v7.widget.CardView

        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/cardview1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       android:layout_margin="8dp"
        card_view:cardElevation="1dp"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/mtoolbar"
        card_view:cardMaxElevation="1dp"
        card_view:contentPadding="1dp"

        >
        card_view:cardElevation="8dp"
        card_view:cardUseCompatPadding="true"
        card_view:cardMaxElevation="7dp"
        card_view:cardElevation="7dp"
        card_view:contentPadding="7dp"
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/imag_food"
                android:layout_width="80dp"
                android:layout_alignParentLeft="true"
                android:layout_height="80dp"
                android:src="@mipmap/air_ticket_rd"/>
        </RelativeLayout>
            <LinearLayout
                android:id="@+id/linear"
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:layout_weight="2.9"
                android:layout_marginBottom="5dp"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/tv_productname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14dp"
                    android:textColor="#7D0A4E"

                    android:textStyle="normal"
                    android:singleLine="true"
                    android:padding="2dp"
                    android:text="Oder !"
                    />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12dp"

                        android:textStyle="normal"
                        android:singleLine="true"
                        android:padding="2dp"
                        android:text="Description:-"
                        />
                    <TextView
                        android:id="@+id/tv_descprition"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12dp"

                        android:textStyle="normal"
                        android:singleLine="true"
                        android:padding="2dp"
                        android:text="Oder !"
                        />
                </LinearLayout>
              <LinearLayout
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content">
                  <TextView

                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:textSize="12dp"
                        android:textColor="@color/black"
                      android:textStyle="normal"
                      android:singleLine="true"
                      android:padding="2dp"
                      android:text="Quantity:-"
                      />
                  <TextView
                      android:id="@+id/tv_quantity"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:textSize="12dp"

                      android:textStyle="normal"
                      android:singleLine="true"
                      android:padding="2dp"
                      android:text="Oder !"
                      />

              </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:background="#7D0A4E"


                >
                <TextView
                    android:id="@+id/tvprice"
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:padding="2dp"
                    android:text="Rs"
                    android:textColor="#FFFFFF"
                    android:textSize="12dp"
                    android:textStyle="normal" />
                <TextView
                    android:id="@+id/tv_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="2dp"
                    android:singleLine="true"
                    android:textColor="#FFFFFF"
                    android:text="Price !"
                    android:textSize="12dp"
                    android:textStyle="normal" />
            </LinearLayout>


        </LinearLayout>
    </android.support.v7.widget.CardView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"

        android:background="#7D0A4E"
        android:layout_alignParentBottom="true">

        <Button
            android:id="@+id/btn_buy"
            android:layout_width="match_parent"
            android:text="Buy Now"

            android:background="#7D0A4E"
            android:textColor="@color/white"
            android:layout_height="match_parent" />
    </LinearLayout>
</RelativeLayout>
