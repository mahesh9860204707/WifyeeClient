<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_marginLeft="5dp"
    android:layout_marginBottom="2dp"
    android:layout_marginRight="5dp"
    android:orientation="horizontal"
    android:layout_height="wrap_content">
    <android.support.v7.widget.CardView

        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/cardview1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        card_view:cardElevation="1dp"
        android:layout_marginTop="2dp"
        card_view:cardMaxElevation="1dp"
        card_view:contentPadding="1dp"
        card_view:cardCornerRadius="1dp"

        >
        card_view:cardElevation="8dp"
        card_view:cardUseCompatPadding="true"
        card_view:cardMaxElevation="7dp"
        card_view:cardElevation="7dp"
        card_view:contentPadding="7dp"
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:id="@+id/header"
                android:layout_width="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/imag_food"
                    android:layout_width="80dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_height="100dp"
                    />
                <LinearLayout
                    android:id="@+id/linear"
                    android:layout_width="150dp"
                    android:orientation="vertical"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="5dp"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_productname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16dp"
                        android:textStyle="normal"
                        android:textColor="#7D0A4E"
                        android:singleLine="true"
                        android:padding="2dp"
                        android:text="Oder !"
                        />
                    <TextView
                        android:id="@+id/tv_descprition"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12dp"
                        android:textStyle="normal"
                        android:singleLine="true"
                        android:padding="2dp"
                        android:text="Oder !"
                        />
                    <TextView
                        android:id="@+id/tv_quantity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12dp"
                        android:visibility="gone"
                        android:textStyle="normal"
                        android:singleLine="true"
                        android:padding="2dp"
                        android:text="Oder !"
                        /><TextView
                    android:id="@+id/tv_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12dp"
                    android:textColor="#7D0A4E"
                    android:textStyle="normal"
                    android:singleLine="true"
                    android:padding="2dp"
                    android:text="Oder !"
                    />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:layout_below="@+id/text"
                        android:weightSum="2"
                        android:layout_marginTop="5dp"
                        android:layout_height="match_parent">
                        <TextView
                            android:id="@+id/tv_view"
                            android:layout_width="wrap_content"
                            android:text="View"
                            android:gravity="center_vertical|center_horizontal"
                            android:layout_gravity="center|center_horizontal"
                            android:textColor="#000000"
                            android:layout_marginRight="2dp"
                            android:textSize="14dp"
                            android:layout_height="match_parent"
                            />
                        <TextView
                            android:layout_width="1dp"
                            android:background="@color/black"
                            android:layout_margin="2dp"

                            android:layout_height="match_parent" />
                        <TextView
                            android:id="@+id/tv_remove"
                            android:layout_width="wrap_content"
                            android:text="Remove"
                            android:gravity="center_vertical|center_horizontal"
                            android:layout_gravity="center_vertical"
                            android:textColor="#000000"
                            android:layout_marginLeft="2dp"
                            android:textSize="14dp"
                            android:layout_height="match_parent"
                            />
                    </LinearLayout>


                </LinearLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="4dp"
                    android:layout_marginStart="4dp"
                    android:layout_toEndOf="@+id/linear"
                    android:layout_toRightOf="@+id/linear"
                    android:gravity="center_horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:weightSum="3"

                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/tv_quantityNumber"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:background="@drawable/rectangle_shape"
                            android:text="1"
                            android:gravity="center"
                            android:padding="2dp"
                            android:textSize="12dp" />
                        <ImageView
                            android:id="@+id/minus"
                            android:layout_width="30dp"
                            android:layout_height="20dp"
                            android:background="#60083B"
                            android:src="@drawable/minus"
                            />



                        <ImageView
                            android:id="@+id/plus"
                            android:layout_width="30dp"
                            android:layout_height="20dp"
                            android:background="#7D0A4E"
                            android:src="@drawable/add"

                            /> android:src="@drawable/ic_local_hospital"
                    </LinearLayout>
                </RelativeLayout>
            </RelativeLayout>

