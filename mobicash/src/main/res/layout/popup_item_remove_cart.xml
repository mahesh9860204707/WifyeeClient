<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relative_layout_top"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="15dip"
    android:layout_marginRight="15dip"
    android:background="@drawable/dialog_bg">

    <TextView
        android:id="@+id/tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Replace cart item?"
        android:paddingLeft="10dp"
        android:paddingTop="20dp"
        android:textColor="@color/black"
        android:paddingBottom="8dp"
        android:textSize="16sp"/>

    <TextView
        android:id="@+id/message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/tv"
        android:layout_alignRight="@id/tv"
        android:layout_below="@id/tv"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_marginTop="8dp"
        android:text="Your cart contains dishes from LocalPreferenceUtility.getMerchantName(context) Do you want to discard the selection and add dishes from FoodOrderListActivity.merchantName?"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/message"
        android:gravity="end"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="6dp"
        android:layout_marginBottom="6dp">

        <Button
            android:id="@+id/cancel_btn"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:background="@android:color/transparent"
            android:textColor="@color/gray_btn_bg_pressed_color"
            android:text="NO"
            android:layout_marginEnd="3dp"
            android:textSize="14sp"/>

        <Button
            android:id="@+id/confirm_btn"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:textColor="@color/secondaryPrimary"
            android:background="@android:color/transparent"
            android:text="YES"
            android:textSize="14sp"/>

    </LinearLayout>

</RelativeLayout>
