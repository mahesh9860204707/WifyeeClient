    <TextView
        android:text="Offer Name"
        android:layout_marginLeft="10dp"
        android:layout_below="@+id/view"
        android:id="@+id/offer_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="12dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="4dp"
        android:textSize="20sp"/>
    <TextView
        android:text="Offer Type"
        android:layout_marginLeft="10dp"
        android:id="@+id/offer_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="12dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:layout_below="@+id/offer_name"
        android:textSize="20sp"/>
    <TextView
        android:text="Offer Discount"
        android:layout_marginLeft="10dp"
        android:id="@+id/offer_discount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="12dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:layout_below="@+id/offer_type"
        android:textSize="20sp"/>


    <TextView
        android:text="Valid Upto"
        android:layout_marginLeft="10dp"
        android:id="@+id/valid_upto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="12dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:layout_below="@+id/offer_discount"
        android:textSize="20sp"/>

