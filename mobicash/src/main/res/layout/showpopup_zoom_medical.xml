<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relative_layout_top"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"
>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/upper_linear"
      >

        <TextView
            android:id="@+id/header_near_by"
            style="@style/TextBoldStyle"
            android:layout_width="fill_parent"
            android:gravity="center"
            android:text="Medical Prescription"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium" />
        <com.wifyee.greenfields.Utils.TouchImageView
            android:id="@+id/zoom_imageview"
            android:padding="5dp"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_margin="10dp"
            android:gravity="center"
            android:layout_height="fill_parent"
            android:layout_gravity="center"
             />



        <Button
            android:id="@+id/yes"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:textColor="#ffffff"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:layout_gravity="center_horizontal"
            android:layout_margin="10dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/selector_xml_btn_yellow"
            android:text="Yes" />
    </LinearLayout>






</RelativeLayout>
