<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rl1">

    <!--<android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        card_view:cardElevation="2.5dp"
        android:layout_marginTop="4dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="4dp"
        card_view:cardCornerRadius="4dp">-->

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/rl2"
            android:layout_marginTop="5dp"
            android:background="?android:attr/selectableItemBackground">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/linearLayout">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:id="@+id/az"
                    android:weightSum="1"
                    android:layout_marginTop="8dp">

                    <TextView
                        android:id="@+id/voucher_name"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.9"
                        android:text="Voucher Name"
                        android:layout_marginLeft="10dp"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:textSize="14sp"
                        android:textColor="@color/black" />

                    <CheckBox
                        android:layout_width="0dp"
                        android:layout_alignParentRight="true"
                        android:id="@+id/payuMoney"
                        android:layout_weight="0.1"
                        android:textColor="@color/white"
                        android:layout_height="30dp" />

                </LinearLayout>

                <TextView
                    android:id="@+id/voucher_details"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Voucher Details"
                    android:layout_marginLeft="10dp"
                    android:textSize="13sp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:id="@+id/txt_voucher_amt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Voucher Amount : "
                        android:textSize="13sp"/>

                    <TextView
                        android:id="@+id/discount_amount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:textSize="15sp"/>

                    <TextView
                        android:id="@+id/voucher_amount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:textSize="13sp"/>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.7dp"
                    android:background="@color/divider"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"/>

            </LinearLayout>

        </RelativeLayout>

    <!--</android.support.v7.widget.CardView>-->

</RelativeLayout>